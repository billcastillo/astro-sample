---
import '../components/GlobalFontAndStyle.astro'
import '../styles/page-layout.css'

import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage?: string
  }
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props as Props
---

<html>
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      pre {
        border-radius: 5px;
      }
    </style>
  </head>

  <body class="bg-bir-dark mt-4">
    <Header />

    <main class="px-6">
      <article class="prose prose-invert prose-xl container mx-auto my-16">
        {
          heroImage && (
            <img
              class="mx-auto w-auto max-h-[400px]"
              width="auto"
              src={heroImage}
              alt=""
            />
          )
        }
        <h1 class="m-0 p-0 font-bebas title text-6xl md:text-8xl text-center">
          {title}
        </h1>
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <hr />
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
